pipeline {
    agent any

    stages {
        stage('npm audit') {
            steps {
                
                
                dir('web') {

                    sh 'pwd'
                    sh 'ls -lhrt'
                    sh 'npm audit | tee auditReport.txt'

                    publishHTML (
                        target : [
                            allowMissing: false,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: '.',
                            reportFiles: 'auditReport.txt',
                            reportName: 'npm audit report',
                            reportTitles: 'Reports'
                        ]
                    )
               }
            }
        }
        stage('sonarqube') {
            steps {
                echo 'Testing..'
            }
        }
        stage('build') {
            steps {
                
                dir('web'){
                
                    sh 'docker build -t ghcr.io/gasilva-clgx:latest .'
                    sh 'docker images'
                    
                    
                }
                
                
                
            }
        }
     stage('Deploy') {
        steps {
            echo 'Deploying....'
        }
    }
    }
}
